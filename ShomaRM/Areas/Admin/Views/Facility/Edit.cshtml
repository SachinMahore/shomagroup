@using ShomaRM.Areas.Admin.Models
@model FacilityModel
@{
    ViewBag.Title = "Facility";
}
<script src="~/Areas/Admin/Content/Pages/Facility/Facility.js"></script>
<input type="hidden" id="hdnFacilityId" value="@Model.FacilityID" />
<div class="content-area submit-property" style="background-color: #FCFCFC;">
    &nbsp;
    <div class="container">
        <div class="wizard-container">
            <div class="wizard-card ct-wizard-orange" id="wizardProperty">
                <form action="" method="">
                    <div class="wizard-header">
                        <h3>
                            <b>Facility </b>Details<br>
                        </h3>
                    </div>
                    <ul>
                        <li><a href="#step1" data-toggle="tab"></a></li>
                    </ul>
                    <div class="tab-content">


                        <div class="" id="step1">
                            <div class="row p-b-15  ">
                                <div class="col-sm-12">
                                    <h4 class="info-text pull-left"> Let's Upload The Facility Picture</h4>
                                    <button type="button" class="btn btn-success pull-right" id="btnSaveUpdate" onclick="goFacilityList()"><i class="fa fa-spinner fa-spin hidden"></i><i class="glyphicon glyphicon glyphicon-plus"></i> <span id="spanSaveUpdate">Facility List</span></button>
                                    <div class="pull-right" style="padding-right:2px;">
                                        <input type='button' class='btn btn-default' value='Save' onclick="SaveUpdateFacility()" />
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="picture-container">
                                        <div class="picture">
                                            <img src="/content/assets/img/Facility/@Model.Photo" class="picture-src" id="wizardPicturePreview" title="" />
                                            <input type="file" id="wizard-picture" value="@Model.Photo">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-8">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="ddlProperty" class="star">Property</label>
                                            <select id="ddlProperty" class="form-control form-control-small"></select>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="txtFacilityName" class="star">Facility Name</label>
                                            <input id="txtFacilityName" class="form-control form-control-small" maxlength="60" value="@Model.FacilityName" />
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="txtDescription">Description</label>
                                            <textarea id="txtDescription" class="form-control form-control-small">@Model.Description</textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--  End step 4 -->
                    </div>

                </form>
            </div>
            <!-- End submit form -->
        </div>

    </div>
</div>

<script>

    $(document).ready(function () {
        setTimeout(function () { $("#ddlProperty").find("option[value='" + @Model.PropertyID + "']").attr('selected', 'selected'); }, 1500);
    });
</script>