@model ShomaRM.Areas.Tenant.Models.CommunityClubModel

@{
    ViewBag.Title = "Index";
}

<input id="hdnUserId" type="hidden" value="@ShomaRM.Models.ShomaGroupWebSession.CurrentUser.UserID" />
<input id="hndTenantID" type="hidden" value="@ShomaRM.Models.ShomaGroupWebSession.CurrentUser.TenantID" />

<div class="content-area submit-property" style="background-color: #FCFCFC;">
    &nbsp;
    <div class="container" style="width:100%;">
        <div class="wizard-container">
            <div class="tab-content">
                <div class="tab-content1">
                    <div class="" id="step3">
                        <div class="row">
                            <div class="col-md-9">
                                <div class="panel-body table-bordered">
                                    <div class="panel-heading center" style="padding:0px !important">
                                        <h3><b style="font-size: 20pt !important;">START A CLUB</b></h3><br />
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <div class="col-sm-3">
                                                    <label style="color:#4D738A !important;font-size:11pt;">Title of Club:</label>
                                                </div>
                                                <div class="col-sm-4" style="margin-left: -36px;">
                                                    <input id="txtTitle" type="text" value="" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <div class="col-sm-3">
                                                    <label style="color:#4D738A !important;font-size:11pt;">Activity:</label>
                                                </div>
                                                <div class="col-sm-4" style="margin-left: -36px;">
                                                    <select id="ddlActivity" class="form-control">
                                                        <option value='1'>Aerial Yoga</option>
                                                        <option value='2'>Biking/Cycling</option>
                                                        <option value='3'>Boot Camp</option>
                                                        <option value='4'>Meet/Greet our Pets</option>
                                                        <option value='5'>Meditation/Religious</option>
                                                        <option value='6'>Reading</option>
                                                        <option value='7'>Running</option>
                                                        <option value='8'>Soccer</option>
                                                        <option value='9'>Swimming</option>
                                                        <option value='10'>Tennis</option>
                                                        <option value='12'>Yoga</option>
                                                        <option value='13'>Walking</option>
                                                        <option value='14'>Other</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <div class="col-sm-3">
                                                    <label style="color:#4D738A !important;font-size:11pt;">Start Date:</label>
                                                </div>
                                                <div class="col-sm-3" style="margin-left: -36px;">
                                                    <input id="txtStartDate" type="text" class="form-control" maxlength="20" placeholder="MM/dd/yyyy" value="">
                                                    <span class="input-group-btn pull-left" style="margin-top: -34px;margin-left:200px;">
                                                        <button id="btnStartDate" class="btn btn-primary search" type="button"><i class="fa-calendar fa"></i></button>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <div class="col-sm-3">
                                                    <label style="color:#4D738A !important;font-size:11pt;">Venue:</label>
                                                </div>
                                                <div class="col-sm-4" style="margin-left: -36px;">
                                                    <input id="txtVenue" type="text" value="" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <div class="col-sm-3">
                                                    <label style="color:#4D738A !important;font-size:11pt;">Meeting Date:</label>
                                                </div>
                                                <div class="col-sm-3" style="margin-left: -36px;">
                                                    <input id="txtMeetingDate" type="text" class="form-control" maxlength="20" placeholder="MM/dd/yyyy" value="">
                                                    <span class="input-group-btn pull-left" style="margin-top: -34px;margin-left:200px;">
                                                        <button id="btnMeetingDate" class="btn btn-primary search" type="button"><i class="fa-calendar fa"></i></button>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <div class="col-sm-3">
                                                    <label style="color:#4D738A !important;font-size:11pt;">Meeting Time:</label>
                                                </div>
                                                <div class="col-sm-3" style="margin-left: -36px;">
                                                    <input id="txtMeetingTime" type="text" class="form-control" maxlength="20" placeholder="HH:mm:ss" value="">
                                                    <span class="input-group-btn pull-left" style="margin-top: -34px;margin-left:200px;">
                                                        <button id="btnMeetingTime" class="btn btn-primary search" type="button"><i class="fa-clock-o fa"></i></button>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <div class="col-sm-3">
                                                    <label style="color:#4D738A !important;font-size:11pt;">Contact(Organizer):</label>
                                                </div>
                                                <div class="col-sm-4" style="margin-left: -36px;">
                                                    <input id="txtContact" type="text" value="" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <div class="col-sm-3">
                                                    <label style="color:#4D738A !important;font-size:11pt;">Email Address:</label>
                                                </div>
                                                <div class="col-sm-4" style="margin-left: -36px;">
                                                    <input id="txtEmail" type="text" value="" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <div class="col-sm-3">
                                                    <label style="color:#4D738A !important;font-size:11pt;">Phone:</label>
                                                </div>
                                                <div class="col-sm-4" style="margin-left: -36px;">
                                                    <input id="txtPhone" type="text" value="" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <div class="col-sm-3">
                                                    <label style="color:#4D738A !important;font-size:11pt;">Best way to contact:</label>
                                                </div>
                                                <div class="col-sm-9" style="margin-left: -36px;">                                                    
                                                    <div class="col-sm-2">
                                                        <input id="rbtnBestWayToContact" class="form-control" type="radio" name="rbtnBestWayToContact" value="1" checked="checked"/> Phone
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <input id="rbtnBestWayToContact" class="form-control" type="radio" name="rbtnBestWayToContact" value="2" /> Email
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />                                    
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <div class="col-sm-3">
                                                    <label style="color:#4D738A !important;font-size:11pt;">Performance Level (If applicable):</label>
                                                </div>
                                                <div class="col-sm-4" style="margin-left: -36px;">
                                                    <select id="ddlPerformanceLevel" class="form-control">
                                                        <option value='1'>Beginner</option>
                                                        <option value='2'>Intermediate</option>
                                                        <option value='3'>Advance</option>
                                                        <option value='4'>All Levels</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div id="MoreDetails">
                                                <div class="form-group">
                                                    <div class="col-sm-3">
                                                        <label style="color:#4D738A !important;font-size:11pt;">Special Instructions/Comments:</label>
                                                    </div>
                                                    <div class="col-sm-4" style="margin-left: -36px;">
                                                        <textarea id="txtComments" placeholder=" Share something about your club..." class="form-control"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="pull-right">
                                            <input type="hidden" id="hndfileCommunityActivity" />
                                            <input type="hidden" id="hndfileCommunityActivityOriginalName" />
                                            <button type="button" class=" btn btn-primary" style="background-color:#4D738A;border-color:#4D738A;color:#fff;margin-top:5px;font-size:8pt;" onclick="createCommunityClub();">Create Club</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div data-spy="affix" data-offset-top="0">
                                    <div class="col-sm-12" style="margin-bottom:-20px;">
                                        <div class="panel-body table-bordered" style="padding:5px !important;">
                                            <div class="center">
                                                <span style="color:#4D738A;font-size:20pt;">amount due:</span>
                                            </div>
                                            <div class="center">
                                                <span id="spanCurrentAmountDue" style="color:#c82828;font-size:20px;">0.00</span><br />
                                                <button id="btnMakeAPayment" class="" style="background-color:#8cb954;border-collapse:collapse;border-radius:2px;color:#ffffff;margin-top:4px;width:60%;font-size:10pt" type="button" onclick="goToMakeAPayment();">Pay</button><br />
                                                <a href="javascript:void(0)" id="btnSetUpRecurringPayment" style="text-decoration:underline;font-size:10pt" onclick="goToSetUpRecurringPayment();">Set Up Recurring Payment</a>
                                            </div>
                                        </div><br />
                                    </div>
                                    <div class="col-sm-12" style="margin-bottom:-20px;">
                                        <div class="panel-body table-bordered" style="padding:10px !important">
                                            <div class="center" id="bellDiv">
                                                <span style="color:#c82828;font-size:30px;"><i class="fa fa-bell"></i></span>
                                            </div><br />
                                            <div id="divServiceRequestAlarm" style="margin-top:-30px;">
                                                <div class="center">
                                                    <span id="spanServiceRequestlabelAlarm" style="font-size:27px;"></span>
                                                </div>
                                                <div class="center">
                                                    <span id="spanServiceRequestDateTimeAlarm"></span>
                                                </div>
                                            </div>
                                        </div><br />
                                    </div>
                                    <div class="col-sm-12" style="margin-bottom:-20px;">
                                        <div class="panel-heading center" style="background-color:#4D738A;padding:5px !important">
                                            <h3 class="panel-title" style="color:#ffffff"><img src="~/Content/assets/Assets/cheers-whight.png" height="20" width="20" /> Celebrate</h3>
                                        </div>
                                        <div class="panel-body table-bordered" style="padding:5px !important">
                                            <div class="center">
                                                <a href="javascript:void(0)" id="btnReserveAmenities" onclick="goToReserveAmenities();"><i class="fa fa-plus-circle"></i> Reserve Amenities</a>
                                            </div>
                                        </div><br />
                                    </div>
                                    <div class="col-sm-12" style="margin-bottom:-20px;">
                                        <div class="panel-heading center" style="background-color:#4D738A;padding:5px !important">
                                            <h3 class="panel-title" style="color:#ffffff"><i class="fa fa-user-plus"></i> Enjoy Company</h3>
                                        </div>
                                        <div class="panel-body table-bordered" style="padding:5px !important">
                                            <div class="center">
                                                <a href="javascript:void(0)" id="btnRegisterGuest" onclick="goToRegisterGuest();"><i class="fa fa-plus-circle"></i> Register a Guest</a>
                                            </div>
                                        </div><br />
                                    </div>
                                    <div class="col-sm-12" style="margin-bottom:-20px;">
                                        <div class="panel-heading center" style="background-color:#4D738A;padding:5px !important">
                                            <h3 class="panel-title" style="color:#ffffff"><i class="glyphicon glyphicon-wrench"></i> Service Request</h3>
                                        </div>
                                        <div class="panel-body table-bordered">
                                            <div class="center">
                                                <a href="javascript:void(0)" id="btnRegisterGuest" onclick="goToSubmitServiceRequest();"><i class="fa fa-plus-circle"></i> Submit a Service Request</a>
                                            </div>
                                            <div class="center">
                                                <span><b>After-Hours</b></span>
                                            </div>
                                            <div class="center" style="margin-top:-3%">
                                                <span>(786)437-8658</span>
                                            </div>
                                            <div class="center" style="margin-top:2%">
                                                <span><b>Emergencies</b></span>
                                            </div>
                                            <div class="center" style="margin-top:-3%">
                                                <span>(786)437-8658 or (911)</span>
                                            </div>
                                        </div><br />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End submit form -->
            </div>
        </div>
    </div>
    <div class="modal" id="popRateOpinion" style="padding-right: 370px !important;">
        <div class="modal-dialog">
            <div class="modal-content" style="width:100%; height:215px;text-align: center;">
                <button type="button" class="close" data-dismiss="modal" style="margin-top: -25px; margin-right: -16px;">&times;</button>
                <!-- Modal body -->
                <div class="modal-body">
                    <p>
                        We want your opinion! Would you take a moment to tell us how we are doing?<br />
                        Would you recommend us to a friend?
                    </p>
                    <p style="text-align:center;margin-top: -2%;cursor:pointer">
                        <div id="ratingButtons" class="text-center" style="margin-bottom:15px;">
                            <button id="rtbtn0" class="btn btn-add-on">0</button>
                            <button id="rtbtn1" class="btn btn-add-on">1</button>
                            <button id="rtbtn2" class="btn btn-add-on">2</button>
                            <button id="rtbtn3" class="btn btn-add-on">3</button>
                            <button id="rtbtn4" class="btn btn-add-on">4</button>
                            <button id="rtbtn5" class="btn btn-add-on">5</button>
                            <button id="rtbtn6" class="btn btn-add-on">6</button>
                            <button id="rtbtn7" class="btn btn-add-on">7</button>
                            <button id="rtbtn8" class="btn btn-add-on">8</button>
                            <button id="rtbtn9" class="btn btn-add-on">9</button>
                            <button id="rtbtn10" class="btn btn-add-on" style="margin-right:0px !important">10</button>
                        </div>
                    </p>
                    <span class="pull-left" style="margin-left:1%;margin-top: -5%;">Not at all</span>
                    <span class="pull-right" style="margin-right:1%;margin-top: -5%;">Most Likely</span>
                    <button class="btn btn-default" data-dismiss="modal" id="btnskip">Skip</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="date-popover" style="padding-right: 370px !important;margin-top: 371px;margin-left: 273px;">
        <div class="modal-dialog">
            <div class="modal-content" style="width: auto; height:auto;text-align: center;">
                <button type="button" class="close" id="closeDate" data-dismiss="modal" style="margin-top: -25px; margin-right: -16px;">&times;</button>
                <!-- Modal body -->
                <div class="modal-body">
                    <div id="divEventsCal" class="tab-content1">

                    </div>
                    <p style="text-align:center;margin-top: -2%;cursor:pointer"></p>
                </div>
            </div>
        </div>
    </div>

    <div id="modalDisclaimer" class="modal" style="width:100% !important">
        <div class="modal-header">
            <span class="close" id="TermDisclaimer" style="margin-top: -10px !important;margin-right: 480px !important;font-size:30px !important;">&times;</span>
        </div>
        <!-- Modal content -->
        <div class="modal-content" style="width:66% !important">
            <div class="text-center">
                <div><iframe src="~/Content/assets/img/Document/Disclaimer.pdf" width="950" height="600" frameborder="0" style="border:0" allowfullscreen></iframe></div>
            </div>
        </div>
    </div>

</div>


<script>
    $(function () {
        $("#txtStartDate").datepicker();
        $("#txtMeetingDate").datepicker();
        $("#txtMeetingTime").datepicker();
    });
    
</script>
