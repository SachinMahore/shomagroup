@model  List<ShomaRM.Areas.Tenant.Models.Club.ClubModel>
@using ShomaRM.Areas.Tenant.Models.Enum;
<script src="~/Content/zabuto_calendar.js"></script>

<div class="row">
    <div class="col-sm-12 mb-15">
        <div class="col-lg-9"><h3 class="headding-sub-text">Community Clubs</h3></div>
        <div class="col-sm-3">
            @Html.DropDownListFor(a => a[0].SearchId, EnumHelper.GetSelectList(typeof(SearchClubListEnum)), "Select", new { @id = "ActivityId", @class = "form-control", @onChange = "SearchClubList(this.value,'" + @ViewBag.CallenderHidden + "')" })
        </div>
    </div>
</div>
<div class="col-md-12">
    <div class="panel-body search-widget">
        <div class="col-md-12 clear scrollbox">
            <table class="borderlessTable tbale-box">

                <tr>


                    <th scope="row" class="border-box border-box2 text-payment tabletr">Name</th>
                    <th scope="row" class="border-box border-box1 text-payment tabletr">Day & Time</th>
                    <th scope="row" class="border-box border-box1 text-payment tabletr">Description</th>
                    <th scope="row" class="border-box border-box1 text-payment tabletr"></th>
                </tr>
                <tbody>
                    @{
                        foreach (var item in Model)
                        {
                            <tr class="s-11">
                                <td style="width:20%;" class="">
                                    @item.ClubTitle
                                </td>
                                <td style="width:20%;" class="">
                                    @item.StartDate.Date.ToString("dd/MM/yyyy") &amp; @item.Time
                                </td>

                                <td style="width:15%;" class="">
                                    @item.Description
                                </td>

                                <td style="width:10%;" class="border-table-none">
                                    @if (@item.UserId == @ShomaRM.Models.ShomaGroupWebSession.CurrentUser.UserID)
                                    {
                                        <a style="cursor:pointer;" class="" text-subheding border-table" onclick="goToStep(8,@item.Id)"><img class="m-l10" src="/Content/assets/img/icon/pencilMax.png"></a>
                                    }
                                </td>


                            </tr>
                        }


                    }
                </tbody>

            </table>
        </div>
    </div>
</div>






