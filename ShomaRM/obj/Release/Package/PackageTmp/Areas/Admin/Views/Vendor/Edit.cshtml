@using ShomaRM.Areas.Admin.Models;
@model VendorModel
@{
    ViewBag.Title = "Vendor";
}
<script src="~/Areas/Admin/Content/Pages/Vendor/Vendor.js"></script>
<input type="hidden" id="hdnVendorId" value="@Model.Vendor_ID" />
<div class="content-area submit-property" style="background-color: #FCFCFC;">
    &nbsp;
    <div class="container">
        <div class="wizard-container">
            <div class="wizard-card ct-wizard-orange" id="wizardProperty">
                <form action="" method="">
                    <div class="wizard-header">
                        <h3>
                            <b>Vendor </b>Details<br>
                        </h3>
                    </div>
                    <ul>
                        <li><a href="#step1" data-toggle="tab"></a></li>
                    </ul>
                    <div class="tab-content">

                        <!--  End step 1 -->
                        <div class="tab-pane" id="step1">
                            <div class="row">
                                <div class="col-sm-12">
                                    <button type="button" class="btn btn-success pull-right" id="btnSaveUpdate" onclick="govendorList()"><i class="fa fa-spinner fa-spin hidden"></i><i class="glyphicon glyphicon glyphicon-plus"></i> <span id="spanSaveUpdate">Vendor List</span></button>
                                    <div class="pull-right" style="padding-right:2px;">
                                        <input type='button' class='btn btn-default' value='Save' onclick="saveUpdateVendor()" />
                                    </div>

                                </div>
                                <div class="col-sm-12">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label for="txtVendorName" class="star">Vendor Name</label>
                                            <input id="txtVendorName" class="form-control form-control-small" maxlength="60" value="@Model.Vendor_Name" />
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label for="txtMobileNumber" class="star">Mobile Number</label>
                                            <input id="txtMobileNumber" class="form-control form-control-small" maxlength="20" onkeypress="return isOnlyNumber(event)" value="@Model.Mobile_Number" />
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label for="txtEmailId" class="star">Email Id</label>
                                            <input id="txtEmailId" class="form-control form-control-small" maxlength="20" value="@Model.Email_Id" />
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label for="ddlState" class="star">State</label>
                                            <select id="ddlState" class="form-control form-control-small"></select>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label for="ddlCity" class="star">City</label>
                                            <select id="ddlCity" class="form-control form-control-small"></select>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label for="txtAddress">Address</label>
                                            <textarea id="txtAddress" class="form-control">@Model.Address</textarea>
                                        </div>
                                    </div>

                                </div>


                                <br>
                            </div>
                        </div>


                        <!--  End step 4 -->
                    </div>
                   
                </form>
            </div>
            <!-- End submit form -->
        </div>

    </div>
</div>

<script>
    $(document).ready(function () {
        setTimeout(function () { $("#ddlState").find("option[value='" + @Model.State + "']").attr('selected', 'selected'); }, 1500);
        fillCityList(@Model.State)
        setTimeout(function () { $("#ddlCity").find("option[value='" + @Model.City + "']").attr('selected', 'selected'); }, 1500);
    });
</script>