@using ShomaRM.Areas.Admin.Models
@model PetManagementModel
@{
    ViewBag.Title = "Index";
}

<script src="~/Areas/Admin/Content/Pages/PetManagement/PetManagement.js"></script>
<input type="hidden" id="hndPetPlaceID" value="@Model.PetPlaceID" />
<input type="hidden" id="hdnSearchType" value="1" />
<input type="hidden" id="hdnCurrentPage" value="1" />
<div class="register-area" style="background-color: rgb(249, 249, 249);">
    <div class="container" style="width:100% !important">
        <div class="breadcrumb">
            <h4 class="">Edit Pet Management  </h4>
        </div>
        <div class="form-group clearfix panel">
            <div class="col-md-7">
                <div class="form-inline clearfix panel">
                    <div class="form-group col-md-3 padding-5">
                        <label class="control-label" style="padding:0px 5px;">Search Pet Place</label>
                    </div>
                    <div class="form-group col-md-3 padding-5">
                        <input type="text" id="txtCriteriaPetPlace" name="Criteria" class="form-control form-control-small" />
                    </div>
                    <div class="form-group col-md-2 padding-5">
                        <button id="btnSearchPetPlace" class='btn btn-next btn-primary' name='Search' style="text-transform:uppercase!important;margin-left:-10px; height:34px" onclick="buildPaganationPetPlaceList(1)"><i class="glyphicon glyphicon-search"></i> SEARCH</button>
                        <button id="btnGoToPetPlace" class="btn btn-success pull-right hidden" style="margin-right:15px;text-transform:uppercase!important;" onclick="goToPetPlace()"><i class="fa fa-spinner fa-spin hidden"></i><i class="fa fa-arrow-circle-o-right"></i> Go to</button>
                        @*fillParkingSearchList*@
                    </div>
                    
                </div>
                <div class="col-sm-12 form-group" id="divPagination_PetPlace">
                    <div id="divPgnPetPlace" class="col-sm-7 pagination">
                        <ul id="ulPagination_PetPlace"></ul>
                    </div>
                    <div class="col-sm-4 padding-0 pull-right" style="margin-top: 22px;">
                        <div class="col-sm-5">
                            <label id="lblRPP_PetPlace" class="control-label" style="margin-left:6px">Row/Page</label>
                        </div>
                        <div class="col-sm-7">
                            <select id="ddlRPP_PetPlace" class="form-control form-control-small"></select>
                        </div>
                    </div>

                </div>
               
                <div class="form-group clearfix">
                    <table id="tblPetPlace" class="table table-bordered table-hover table-striped" cellspacing="0" style="width:100%">
                        <thead>
                            <tr>
                                <th class="pds-cityname" style="background-color: #c7cdd5;color:#3d3939;width:45%!important;cursor:pointer;" title="Sort" onclick="sortTablePet('PetName')">Pet <i id="sortPetIcon" class=""></i></th>
                                <th class="pds-cityname" style="background-color: #c7cdd5;color:#3d3939;width:40%!important;cursor:pointer;" title="Sort" onclick="sortTablePet('ChargesName')">Charges <i id="sortChargesIcon" class=""></i></th>
                                <th class="pds-cityname" style="background-color: #c7cdd5;color:#3d3939;width:15%!important">Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-5">
                <div class="col-md-12 padding-5">
                    <div class="form-group pull-right clearfix" >
                        <button type="button" class="btn btn-primary" id="btnPetPlace" style="text-transform:uppercase!important" onclick="NewPetPlace()"><i class="fa fa-spinner fa-spin hidden"></i><i class="fa fa-plus"></i> Clear</button>
                        <button type="button" class="btn btn-primary" id="btnSavePetPlace" style="text-transform:uppercase!important" onclick="saveUpdatePetPlace()"><i class="fa fa-spinner fa-spin hidden"></i><i class="fa fa-save"></i> <span id="spanSaveUpdate">Save</span></button>
                    </div>
                </div>
                <div class="form-group clearfix padding-5">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="ddlProperty" class="star">Property</label>
                                <select id="ddlProperty" class="form-control form-control-small"></select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="txtPetPlaceName" class="star">Pet</label>
                                <input class="form-control form-control-small" id="txtPetPlaceName" maxlength="100" type="text" value="@Model.PetPlace" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                         
                            <div class="form-group">
                                <label class="star">Charges</label>
                                <div class="input-group">
                                    <span class="input-group-btn">
                                        <button class="btn btn-primary search" type="button"><i class="fa-dollar fa"></i></button>
                                    </span>
                                    <input id="txtCharges" class="form-control form-control-small" value="@(Model.Charges.HasValue?Model.Charges.Value.ToString("N2"):"0.00")" type="text" onkeypress="return isNumber(event)" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="txtDescription">Description</label>
                                <textarea class="form-control form-control-small" id="txtDescription">@Model.Description</textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

