
@{
    ViewBag.Title = "AddEdit";
}

<script src="~/Areas/Admin/Content/Pages/MarketSource/MarketSource.js"></script>
<input type="hidden" id="hndMarketSourceID" value="" />


<!-- register-area -->
<div class="register-area" style="background-color: rgb(249, 249, 249);">
    <div class="container">
        <div class="breadcrumb">
            <h4 class="">Add / Edit State  </h4>
        </div>
        <div class="form-group clearfix panel">
            <div class="col-md-12">
                <div class="form-group pull-right clearfix" style="padding-top:5px;">
                    <button type="button" class="btn btn-primary" id="btnSearch" onclick="searchMarketSource()"><i class="fa fa-spinner fa-spin hidden"></i><i class="fa fa-search"></i> Search</button>
                    @*<button type="button" class="btn btn-primary" id="btnNew" onclick="newUser()"><i class="fa fa-spinner fa-spin hidden"></i><i class="fa fa-plus"></i> New</button>*@
                    <button type="button" class="btn btn-success" id="btnSaveUpdate" onclick="saveUpdateMarketSource()"><i class="fa fa-spinner fa-spin hidden"></i><i class="fa fa-save"></i> <span style="text-transform:uppercase!important" id="spanSaveUpdate">Save</span></button>
                </div>
            </div>
            <div class="form-group clearfix padding-5">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="firstname" class="star">Market Source</label>
                            <input class="form-control form-control-small" id="txtMarketSource" maxlength="100" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .required {
        color: red;
    }

    .k-button {
        line-height: 1.5em !important;
    }

    .gridbtn {
        background-color: #e0e0e0;
        font-size: 12px;
        padding: 3px 4px !important;
    }

    .btn {
        border-radius: 3px;
        padding: 3px 12px;
        font-size: 12px;
    }
</style>

