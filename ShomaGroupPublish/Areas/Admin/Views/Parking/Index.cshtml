@using ShomaRM.Areas.Admin.Models
@model ParkingModel
@{
    ViewBag.Title = "Index";
}

<script src="~/Areas/Admin/Content/Pages/Parking/Parking.js"></script>
<input type="hidden" id="hndParkingID" value="@Model.ParkingID" />
<input type="hidden" id="hdnSearchType" value="1" />
<input type="hidden" id="hdnCurrentPage" value="1" />
<input type="hidden" id="hndPageNo" value="0" />
<div class="register-area" style="background-color: rgb(249, 249, 249);">
    <div class="container" style="width:100% !important">
        <div class="breadcrumb">
            <h4 class="">Add / Edit Parking  </h4>
        </div>
        <div class="form-group clearfix panel">
            <div class="col-md-7">
                <div class="form-inline clearfix panel">
                    <div class="form-group col-md-3 padding-5">
                        <label class="control-label" style="padding:0px 5px;">Search Parking</label>
                    </div>
                    <div class="form-group col-md-3 padding-5">
                        <input type="text" id="txtCriteriaParking" name="Criteria" class="form-control form-control-small" />
                    </div>
                    <div class="form-group col-md-2 padding-5">
                        <button id="btnSearchParking" class='btn btn-next btn-primary' style="text-transform:uppercase!important;margin-left:-10px; height:34px" name='Search' onclick="buildPaganationParkingList(1)"><i class="fa fa-search"></i> Search</button>
                        <button id="btnGoAmenities" class="btn btn-success pull-right hidden" style="margin-right:15px;text-transform:uppercase!important;" onclick="goToParking()"><i class="fa fa-spinner fa-spin hidden"></i><i class="fa fa-arrow-circle-o-right"></i> Go to</button>
                        @*fillParkingSearchList*@
                    </div>
                  
                </div>
                <div class="col-sm-12 form-group" id="divPagination_Parking">
                    <div id="divPgnParking" class="col-sm-7 pagination">
                        <ul id="ulPagination_Parking"></ul>
                    </div>
                    <div class="col-sm-4 padding-0 pull-right" style="margin-top: 22px;">
                        <div class="col-sm-5">
                            <label id="lblRPP_Parking" class="control-label" style="margin-left:6px">Row/Page</label>
                        </div>
                        <div class="col-sm-7">
                            <select id="ddlRPP_Parking" class="form-control form-control-small"></select>
                        </div>
                    </div>
                </div>
              
                <div class="form-group clearfix">
                    <table id="tblParking" class="table table-bordered table-hover table-striped" cellspacing="0" style="width:100%">
                        <thead>
                            <tr>
                                <th class="pds-cityname" style="background-color: #c7cdd566;color:#3d3939;cursor:pointer;" title="Sort" onclick="sortTableParking('ParkingName')">Parking <i id="SortIconParking"></i></th>
                                <th class="pds-cityname" style="background-color: #c7cdd566;color:#3d3939;cursor:pointer;" title="Sort" onclick="sortTableParking('ChargesName')">Charges <i id="SortIconCharges"></i></th>
                                <th class="pds-cityname" style="background-color: #c7cdd566;color:#3d3939">Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-5">
                <div class="col-md-12 padding-5">
                    <div class="form-group pull-right clearfix" >
                        <button class="btn btn-primary" id="btnParking" style="text-transform:uppercase!important" onclick="NewParking()"><i class="fa fa-spinner fa-spin hidden"></i><i class="fa fa-plus"></i> New</button>
                        <button class="btn btn-primary" id="btnSaveParking" style="text-transform:uppercase!important" onclick="saveUpdateParking()"><i class="fa fa-spinner fa-spin hidden"></i><i class="fa fa-save"></i> <span id="spanSaveUpdate">Save</span></button>
                    </div>
                </div>
                <div class="form-group clearfix padding-5">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="firstname" class="">Property</label>
                                <select id="ddlProperty" class="form-control form-control-small"></select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="txtParkingName" class="star">Parking</label>
                                <input class="form-control form-control-small" id="txtParkingName" maxlength="100" type="text" value="@Model.ParkingName" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="star">Charges</label>
                                <div class="input-group">
                                    <span class="input-group-btn">
                                        <button class="btn btn-primary search" type="button"><i class="fa-dollar fa"></i></button>
                                    </span>
                                    <input id="txtCharges" class="form-control form-control-small" value="@(Model.Charges.HasValue?Model.Charges.Value.ToString("N2"):"0.00")" type="text" onkeypress="return isNumber(event)" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label for="txtDescription">Description</label>
                                <textarea class="form-control form-control-small" id="txtDescription">@Model.Description</textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

