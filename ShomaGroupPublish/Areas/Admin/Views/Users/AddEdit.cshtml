@{
    ViewBag.Title = (ViewBag.UserID == 0 ? "Add" : "Edit") + " User";
    var UserID = ViewBag.UserID;
    var pageTitle = (ViewBag.UserID == 0 ? "Add User" : "Edit User");

    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

