<!-- register-area -->
<div class="register-area" style="background-color: rgb(249, 249, 249);">
    <div class="container" style="width:100%!important">
        <div class="breadcrumb">
            <h4 class="">Add/Edit User  </h4>
        </div>
        <div class="form-group clearfix panel">
            <div class="col-md-12">
                <div class="form-group pull-right clearfix" style="padding-top:5px;">
                   
                    <button type="button" class="btn btn-primary" id="btnSearch" onclick="searchUser()"><i class="fa fa-spinner fa-spin hidden"></i><i class="glyphicon glyphicon-search"></i> USER LIST</button>
                    <button type="button" class="btn btn-primary" id="btnSaveUpdate" onclick="saveUpdateUser()"><i class="fa fa-save"></i> <span id="spanSaveUpdate"> SAVE</span></button>
                </div>
            </div>
            <div class="form-group clearfix padding-5">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="firstname" class="star">First Name</label>
                            <input class="form-control form-control-small" id="txtFirstName" maxlength="100" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="lastname" class="star">Last Name</label>
                            <input class="form-control form-control-small" id="txtLastName" maxlength="100" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="email" class="star">Username</label>
                            <input id="txtUserName" type="text" class="form-control form-control-small" name="txtUserName" maxlength="255" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="subject" class="star">Password</label>
                            <input id="txtPassword" type="password" class="form-control form-control-small" name="txtPassword" maxlength="255" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="email" class="star">Email</label>
                            <input id="txtEmail" type="text" class="form-control form-control-small" name="txtEmail" maxlength="255" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="subject">Confirm Password</label>
                            <input id="txtConfirmPassword" type="password" class="form-control form-control-small" name="txtConfirmPassword" maxlength="255" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="email">Cell Phone</label>
                            <input id="txtCellPhone" class="form-control form-control-small pull-right" maxlength="10" type="text" onkeypress="return isOnlyNumber(event)" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group padding-5">
                            <label for="subject">Is Active</label><br />
                            <input type="checkbox" id="chkIsActive" name="chkIsActive" class="form-control form-control-small" />
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="email">User Type</label>
                            <select id="ddlUserType" class="form-control form-control-small" style="width:100%!important"></select>
                        </div>
                    </div>

