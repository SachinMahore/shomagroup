@using ShomaRM.Areas.Tenant.Models
@model FacilityBookingModel
@{
    ViewBag.Title = "Facility Booking";
}
<script src="~/Areas/Tenant/Content/Pages/FacilityBooking/FacilityBooking.js"></script>
<div class="register-area" style="background-color: rgb(249, 249, 249);">
    <div class="container">
        <div class="row">
            <div class="breadcrumb">
                <h4 class="">Facility Booking List</h4>
            </div>

            <div class="col-md-12  pr0  properties-page">
                <div class="panel panel-default sidebar-menu wow fadeInRight animated">
                    <div class="panel-heading">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <h3 class="panel-title">From Date</h3>
                                <input id="txtFromDate" type="text" class="form-control" value="@DateTime.Now.AddDays(-10).ToString("MM/dd/yyyy")">
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <h3 class="panel-title">To Date</h3>
                                <input id="txtToDate" type="text" class="form-control" value="@DateTime.Now.ToString("MM/dd/yyyy")">
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group  padding-top-25">

                                <input type='button' class='btn btn-next btn-primary' name='Search' value='Search' onclick="getFacilityBookingLists()" />
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group  padding-top-25">

                                <button type="button" class="btn btn-success pull-right" id="btnSaveUpdate" onclick="addNewFacilityBooking()"><i class="fa fa-spinner fa-spin hidden"></i><i class="glyphicon glyphicon-plus"></i> <span id="spanSaveUpdate">NEW</span></button>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body search-widget">
                        <div class="col-md-12 clear">

                            <table id="tblFacilityBooking" class="table table-bordered table-hover table-striped" cellspacing="0" style="width:100%">
                                <thead>
                                    <tr>
                                        <th style="background-color: #c7cdd566;color:#3d3939">Facility</th>
                                        <th style="background-color: #c7cdd566;color:#3d3939">Booking Date</th>
                                        <th style="background-color: #c7cdd566;color:#3d3939">Required From Date</th>
                                        <th style="background-color: #c7cdd566;color:#3d3939">Required To Date</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>

                        <div class="col-md-12">
                            <div class="pull-right">
                                <div class="pagination">
                                    <ul>
                                        <li><a href="#">Prev</a></li>
                                        <li><a href="#">1</a></li>
                                        <li><a href="#">2</a></li>
                                        <li><a href="#">3</a></li>
                                        <li><a href="#">4</a></li>
                                        <li><a href="#">Next</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $("#txtFromDate").datepicker();
        $("#txtToDate").datepicker();

    });
</script>
